<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.consulta_javafx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label alignment="CENTER" contentDisplay="CENTER" text="Consulta de Notas">
      <font>
         <Font size="20.0" />
      </font></Label>
   <Label text="Código Único" />
   <TextField fx:id="codigoField" />
   <Label alignment="TOP_LEFT" text="Nombre" />
   <TextField fx:id="nombreField" />
   <Label text="Carrera" />
   <TextField fx:id="carreraField" />
   <Label text="Nota Final" />
   <TextField fx:id="notaField" />
  <Button onAction="#registrarBt" prefHeight="31.0" prefWidth="320.0" text="Registrar los Datos Ingresados" />
   <Button mnemonicParsing="false" onAction="#buscarBt" prefWidth="320.0" text="Buscar datos por el Código Único" />
   <Button mnemonicParsing="false" onAction="#actualizarBt" prefWidth="320.0" text="Actualizar Datos" />
   <Button mnemonicParsing="false" onAction="#borrarBt" prefWidth="320.0" text="Borrar Datos" />
</VBox>
